<%- include('partials/header', { activePage: 'analytics' }) %>

<div class="container-fluid px-md-4">
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-<%= messageType %> alert-dismissible fade show" role="alert">
      <i class="bi bi-<%= messageType === 'success' ? 'check-circle-fill' : messageType === 'danger' ? 'exclamation-triangle-fill' : 'info-circle-fill' %> me-2"></i>
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Analytics</h1>
    <div>
      <span class="badge bg-primary px-3 py-2">
        <i class="bi bi-calendar-event me-1"></i> Last 30 Days
      </span>
    </div>
  </div>

  <div class="row mb-4 g-4">
    <div class="col-md-6 col-lg-3">
      <div class="card metric-card">
        <div class="card-body">
          <div class="metric-icon">
            <i class="bi bi-people-fill"></i>
          </div>
          <div class="metric-label">Total Users</div>
          <div class="metric-value"><%= totalUsers %></div>
          <div class="chart-container">
            <div class="chart-bar" style="height: 60%; left: 10%;"></div>
            <div class="chart-bar" style="height: 70%; left: 20%;"></div>
            <div class="chart-bar" style="height: 40%; left: 30%;"></div>
            <div class="chart-bar" style="height: 80%; left: 40%;"></div>
            <div class="chart-bar" style="height: 60%; left: 50%;"></div>
            <div class="chart-bar" style="height: 90%; left: 60%;"></div>
            <div class="chart-bar" style="height: 75%; left: 70%;"></div>
            <div class="chart-bar" style="height: 65%; left: 80%;"></div>
            <div class="chart-bar" style="height: 85%; left: 90%;"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card metric-card">
        <div class="card-body">
          <div class="metric-icon">
            <i class="bi bi-chat-dots-fill"></i>
          </div>
          <div class="metric-label">Total Messages</div>
          <div class="metric-value"><%= totalMessages %></div>
          <div class="chart-container">
            <div class="chart-bar" style="height: 30%; left: 10%;"></div>
            <div class="chart-bar" style="height: 50%; left: 20%;"></div>
            <div class="chart-bar" style="height: 80%; left: 30%;"></div>
            <div class="chart-bar" style="height: 40%; left: 40%;"></div>
            <div class="chart-bar" style="height: 60%; left: 50%;"></div>
            <div class="chart-bar" style="height: 70%; left: 60%;"></div>
            <div class="chart-bar" style="height: 90%; left: 70%;"></div>
            <div class="chart-bar" style="height: 50%; left: 80%;"></div>
            <div class="chart-bar" style="height: 65%; left: 90%;"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card metric-card">
        <div class="card-body">
          <div class="metric-icon">
            <i class="bi bi-trophy-fill"></i>
          </div>
          <div class="metric-label">Total Points</div>
          <div class="metric-value"><%= totalPoints %></div>
          <div class="chart-container">
            <div class="chart-bar" style="height: 50%; left: 10%;"></div>
            <div class="chart-bar" style="height: 70%; left: 20%;"></div>
            <div class="chart-bar" style="height: 60%; left: 30%;"></div>
            <div class="chart-bar" style="height: 40%; left: 40%;"></div>
            <div class="chart-bar" style="height: 80%; left: 50%;"></div>
            <div class="chart-bar" style="height: 90%; left: 60%;"></div>
            <div class="chart-bar" style="height: 75%; left: 70%;"></div>
            <div class="chart-bar" style="height: 55%; left: 80%;"></div>
            <div class="chart-bar" style="height: 85%; left: 90%;"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card metric-card">
        <div class="card-body">
          <div class="metric-icon">
            <i class="bi bi-bar-chart-fill"></i>
          </div>
          <div class="metric-label">Average Points</div>
          <div class="metric-value"><%= averagePoints %></div>
          <div class="chart-container">
            <div class="chart-bar" style="height: 40%; left: 10%;"></div>
            <div class="chart-bar" style="height: 60%; left: 20%;"></div>
            <div class="chart-bar" style="height: 50%; left: 30%;"></div>
            <div class="chart-bar" style="height: 70%; left: 40%;"></div>
            <div class="chart-bar" style="height: 65%; left: 50%;"></div>
            <div class="chart-bar" style="height: 80%; left: 60%;"></div>
            <div class="chart-bar" style="height: 75%; left: 70%;"></div>
            <div class="chart-bar" style="height: 90%; left: 80%;"></div>
            <div class="chart-bar" style="height: 85%; left: 90%;"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Most Active Users</h5>
          <span class="badge bg-secondary"><%= mostActiveUsers ? mostActiveUsers.length : 0 %> Users</span>
        </div>
        <div class="card-body p-0">
          <% if (mostActiveUsers && mostActiveUsers.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">User</th>
                    <th scope="col" class="d-none d-md-table-cell">Messages</th>
                    <th scope="col">Points</th>
                    <th scope="col" class="d-none d-md-table-cell">Last Seen</th>
                  </tr>
                </thead>
                <tbody>
                  <% mostActiveUsers.forEach((user, index) => { %>
                    <tr>
                      <td>
                        <% if (index === 0) { %>
                          <span class="badge bg-warning text-dark">1st</span>
                        <% } else if (index === 1) { %>
                          <span class="badge bg-secondary">2nd</span>
                        <% } else if (index === 2) { %>
                          <span class="badge" style="background-color: #cd7f32;">3rd</span>
                        <% } else { %>
                          <%= index + 1 %>
                        <% } %>
                      </td>
                      <td><%= user.name %></td>
                      <td class="d-none d-md-table-cell"><strong><%= user.messages %></strong></td>
                      <td><span class="text-<%= index < 3 ? 'warning' : 'primary' %>"><%= user.points %></span></td>
                      <td class="d-none d-md-table-cell"><small><%= new Date(user.lastSeen).toLocaleString() %></small></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="alert alert-info m-3">
              <i class="bi bi-info-circle me-2"></i>
              No user data available yet. Statistics will appear as users interact with the bot.
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Command Usage</h5>
          <span class="badge bg-warning px-3 py-2">Coming Soon</span>
        </div>
        <div class="card-body p-0">
          <div class="alert alert-info m-3">
            <i class="bi bi-info-circle me-2"></i>
            Command usage statistics will be available in a future update.
          </div>
          <div class="row g-4 p-3">
            <div class="col-md-4 col-sm-4 col-6">
              <div class="card metric-card">
                <div class="card-body">
                  <div class="metric-icon">
                    <i class="bi bi-coin"></i>
                  </div>
                  <div class="metric-label">!points Command</div>
                  <div class="metric-value">--</div>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-4 col-6">
              <div class="card metric-card">
                <div class="card-body">
                  <div class="metric-icon">
                    <i class="bi bi-list-ol"></i>
                  </div>
                  <div class="metric-label">!top Command</div>
                  <div class="metric-value">--</div>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-4 col-12">
              <div class="card metric-card">
                <div class="card-body">
                  <div class="metric-icon">
                    <i class="bi bi-code-slash"></i>
                  </div>
                  <div class="metric-label">Other Commands</div>
                  <div class="metric-value">--</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 